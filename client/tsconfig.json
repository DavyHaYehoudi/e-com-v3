{
  "compilerOptions": {
    "outDir": "./dist", // Tous les fichiers .js générés iront dans le dossier "dist"
    "rootDir": "./src", // Définissez le dossier source comme racine
    "noEmit": true, // Empêche la génération de fichiers .js
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/lib/utils/*": [
        "src/lib/utils/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/service/*": [
        "src/service/*"
      ],
      "@/redux/*": [
        "src/redux/*"
      ],
      "@/layout/*": [
        "src/layout/*"
      ],
      "@/types/*": [
        "src/types/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}